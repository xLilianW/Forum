<% if @post.errors.any? %>
 <h2>The following errors prevented the post from saving:</h2>
 <ul>
 <% @post.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
<%= form_for @post do |f| %>
 <p>
  <%= f.label :title %><br>
  <%= f.text_field :title, size: "50" %>
 </p>
 <p>
  <%= f.label "content" %><br>
  <%= f.text_area :content, size: "70x10" %>
 </p>
 <p>
  <%= f.submit %>
 </p>
<% end %>
